<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.willy.tablelayoutkuis.MainActivity">
    <TableRow
            style="@style/row"
            android:background="@color/grey">
            <TextView
                style="@style/header"
                android:text="Location"
                android:layout_span="2"/>
        </TableRow>
    <TableRow
            style="@style/row">
            <TextView
                style="@style/textview"
                android:text="Name"/>
            <EditText
                style="@style/edittext"/>
        </TableRow>
    <TableRow
            style="@style/row">
            <TextView
                style="@style/textview"
                android:text="City"/>
            <EditText
                style="@style/edittext"/>
        </TableRow>
    <TableRow
            style="@style/row">
            <TextView
                style="@style/textview"
                android:text="Country"/>
            <EditText
                style="@style/edittext"/>
        </TableRow>
    <TableRow
            style="@style/row">
            <TextView
                style="@style/textview"
                android:text="Location"/>
            <EditText
                style="@style/edittext"/>
        </TableRow>
    <TableRow
        style="@style/row"
        android:background="@color/grey">
        <TextView
            style="@style/header"
            android:text="User data"/>
    </TableRow>
    <TableRow
            style="@style/row">
            <TextView
                style="@style/textview"
                android:text="Name"/>
            <EditText
                style="@style/edittext"/>
        </TableRow>
    <TableRow
            style="@style/row">
            <TextView
                style="@style/textview"
                android:text="Country"/>
            <EditText
                style="@style/edittext"/>
        </TableRow>
    <TableRow
            style="@style/row">
            <TextView
                style="@style/textview"
                android:text="E-mail"/>
            <EditText
                style="@style/edittext"/>
        </TableRow>
    <TableRow
            style="@style/row">
            <Space/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    style="@style/button"
                    android:text="Save"/>
                <Button
                    style="@style/button"
                    android:text="Reset"/>
            </LinearLayout>
        </TableRow>
</TableLayout>
